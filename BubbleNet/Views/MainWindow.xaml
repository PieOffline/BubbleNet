<Window x:Class="BubbleNet.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BubbleNet.ViewModels"
        xmlns:converters="clr-namespace:BubbleNet.Converters"
        xmlns:models="clr-namespace:BubbleNet.Models"
        Title="BubbleNet - QuickShare" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <!-- Window Resources: Converters for data binding -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <converters:TransferTypeToStringConverter x:Key="TypeToStringConverter"/>
        <converters:TransferTypeToIconConverter x:Key="TypeToIconConverter"/>
    </Window.Resources>

    <!-- DataContext: MainViewModel handles all logic -->
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Top Notification Banner with Settings Button ===== -->
        <Border Grid.Row="0" Style="{StaticResource NotificationBanner}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Notification Message -->
                <TextBlock Grid.Column="0" Text="{Binding NotificationMessage}" 
                           Foreground="{StaticResource PrimaryTextBrush}" 
                           FontSize="14" VerticalAlignment="Center"/>
                
                <!-- Connection Status and Port -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               FontSize="13" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding PortDisplay}" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               FontSize="13" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Settings Button (top right) -->
                <Button Grid.Column="2" Content="âš™ï¸" 
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding OpenSettingsCommand}"
                        ToolTip="Open Settings"
                        Padding="10,5" FontSize="16"/>
            </Grid>
        </Border>

        <!-- ===== Main Content Area ===== -->
        <Grid Grid.Row="1">
            
            <!-- ===== Start Screen (Not Connected) ===== -->
            <Border Style="{StaticResource Card}" 
                    Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <!-- BubbleNet Logo -->
                    <TextBlock Text="ðŸ«§" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="BubbleNet" FontSize="36" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryTextBrush}" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Share files, links, and more across your local network" 
                               FontSize="16" Foreground="{StaticResource SecondaryTextBrush}" 
                               HorizontalAlignment="Center" Margin="0,0,0,40"/>
                    
                    <!-- Mesh Me Button -->
                    <Button Content="ðŸ”Œ Mesh Me" Style="{StaticResource BigBlueButton}" 
                            Command="{Binding MeshMeCommand}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Opens port 16741 or 6741 for local connections" 
                               FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>

            <!-- ===== Connected View (Two-Panel Layout) ===== -->
            <Grid Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ===== LEFT SIDE: Redesigned Send Section ===== -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0: IP Entry Box (at the very top) -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="Recipient Word Code" FontSize="13" 
                                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource DarkTextBox}" 
                                     Text="{Binding TargetWordCode, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="16"/>
                        </StackPanel>

                        <!-- Row 1: Send Button (just below IP entry) -->
                        <Button Grid.Row="1" Content="ðŸ“¤ Send" Style="{StaticResource PrimaryButton}" 
                                Command="{Binding SendCommand}" 
                                HorizontalAlignment="Stretch" Margin="0,0,0,15"
                                FontSize="16" Padding="15,12"/>

                        <!-- Row 2: Payload Type Chooser (TikTok-style icons) -->
                        <Border Grid.Row="2" Background="{StaticResource TertiaryBackgroundBrush}" 
                                CornerRadius="8" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Payload Type" FontSize="12" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           Margin="0,0,0,10" HorizontalAlignment="Center"/>
                                
                                <!-- Payload Type Icons Row -->
                                <UniformGrid Rows="1" Columns="5">
                                    <!-- File -->
                                    <Button Style="{StaticResource SecondaryButton}" Padding="5"
                                            Command="{Binding SelectPayloadTypeCommand}"
                                            CommandParameter="{x:Static models:TransferType.File}"
                                            ToolTip="File">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ“" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="File" FontSize="10" HorizontalAlignment="Center"
                                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Text -->
                                    <Button Style="{StaticResource SecondaryButton}" Padding="5"
                                            Command="{Binding SelectPayloadTypeCommand}"
                                            CommandParameter="{x:Static models:TransferType.Text}"
                                            ToolTip="Text">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ“" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Text" FontSize="10" HorizontalAlignment="Center"
                                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Link -->
                                    <Button Style="{StaticResource SecondaryButton}" Padding="5"
                                            Command="{Binding SelectPayloadTypeCommand}"
                                            CommandParameter="{x:Static models:TransferType.Link}"
                                            ToolTip="Link">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ”—" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Link" FontSize="10" HorizontalAlignment="Center"
                                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Screenshot -->
                                    <Button Style="{StaticResource SecondaryButton}" Padding="5"
                                            Command="{Binding SelectPayloadTypeCommand}"
                                            CommandParameter="{x:Static models:TransferType.Screenshot}"
                                            ToolTip="Screenshot">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ“¸" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Screenshot" FontSize="9" HorizontalAlignment="Center"
                                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Stream -->
                                    <Button Style="{StaticResource SecondaryButton}" Padding="5"
                                            Command="{Binding SelectPayloadTypeCommand}"
                                            CommandParameter="{x:Static models:TransferType.StreamShare}"
                                            ToolTip="Stream Share">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ“º" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Stream" FontSize="10" HorizontalAlignment="Center"
                                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!-- Row 3: Selected Payload Display (Icon + Name) -->
                        <Border Grid.Row="3" Background="{StaticResource TertiaryBackgroundBrush}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedPayloadIcon}" FontSize="28" 
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding SelectedPayloadName}" FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBrush}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Row 4: Dynamic Input Field based on selected payload -->
                        <Border Grid.Row="4" Background="{StaticResource SecondaryBackgroundBrush}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <!-- Text Input (for Text type) -->
                                <StackPanel Visibility="{Binding SelectedPayloadType, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Text}">
                                    <TextBlock Text="Message" FontSize="12" 
                                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource DarkTextBox}" 
                                             Text="{Binding TextToSend, UpdateSourceTrigger=PropertyChanged}"
                                             TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                                </StackPanel>
                                
                                <!-- Link Input (for Link type) -->
                                <StackPanel Visibility="{Binding SelectedPayloadType, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Link}">
                                    <TextBlock Text="URL" FontSize="12" 
                                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource DarkTextBox}" 
                                             Text="{Binding LinkToSend, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                
                                <!-- File/Screenshot info -->
                                <StackPanel Visibility="{Binding SelectedPayloadType, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=File}">
                                    <TextBlock Text="Click 'Send' to browse for a file" FontSize="13" 
                                               Foreground="{StaticResource SecondaryTextBrush}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Visibility="{Binding SelectedPayloadType, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Screenshot}">
                                    <TextBlock Text="Click 'Send' to capture and send your screen" FontSize="13" 
                                               Foreground="{StaticResource SecondaryTextBrush}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Stream toggle -->
                                <StackPanel Visibility="{Binding SelectedPayloadType, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=StreamShare}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Stream Status: " FontSize="13" 
                                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock FontSize="13" VerticalAlignment="Center"
                                                   Foreground="{StaticResource AccentBrush}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Not Streaming"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsStreaming}" Value="True">
                                                            <Setter Property="Text" Value="ðŸ”´ Streaming..."/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="Click 'Send' to start/stop streaming" FontSize="11" 
                                               Foreground="{StaticResource SecondaryTextBrush}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Row 5: Your Word Code Display -->
                        <Border Grid.Row="5" Background="{StaticResource TertiaryBackgroundBrush}" 
                                CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Your Word Code" FontSize="12" 
                                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding WordCode}" FontSize="18" FontWeight="SemiBold" 
                                               Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text="{Binding LocalIP, StringFormat='IP: {0}'}" FontSize="11" 
                                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="ðŸ“‹ Copy" Style="{StaticResource SecondaryButton}" 
                                        Command="{Binding CopyWordCodeCommand}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Row 6: DoubleBubble Toggle & Disconnect -->
                        <StackPanel Grid.Row="6" Margin="0,15,0,0">
                            <!-- DoubleBubble Toggle -->
                            <Border Background="{StaticResource TertiaryBackgroundBrush}" 
                                    CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton Style="{StaticResource ToggleSwitch}" 
                                                  IsChecked="{Binding IsDoubleBubbleEnabled}" 
                                                  Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ«§ðŸ«§ DoubleBubble" FontSize="13" 
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="Send to multiple recipients" FontSize="10" 
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Disconnect Button -->
                            <Button Content="âŒ Disconnect" Style="{StaticResource SecondaryButton}" 
                                    Command="{Binding DisconnectCommand}" 
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ===== RIGHT SIDE: Receive Section ===== -->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Receive Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“¥ Received" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,5"/>
                            <TextBlock Text="View and manage incoming transfers" 
                                       FontSize="13" Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>

                        <!-- Toggle Controls -->
                        <Border Grid.Row="1" Background="{StaticResource TertiaryBackgroundBrush}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Auto Deny Toggle -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <ToggleButton Style="{StaticResource ToggleSwitch}" 
                                                  IsChecked="{Binding AutoDeny}" Margin="0,0,10,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Auto-Deny" FontSize="13" 
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="Block all incoming" FontSize="10" 
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Auto Open Toggle -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ToggleButton Style="{StaticResource ToggleSwitch}" 
                                                  IsChecked="{Binding AutoOpen}" Margin="0,0,10,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Auto-Open" FontSize="13" 
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="Open links in browser" FontSize="10" 
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Received Items List -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ReceivedItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ReceivedItemCard}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Item Header (Icon + Info) -->
                                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding TypeIcon}" FontSize="20" 
                                                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding DisplayInfo}" FontSize="14" 
                                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                                   TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                                                        <TextBlock FontSize="11" Foreground="{StaticResource SecondaryTextBrush}">
                                                            <Run Text="{Binding Type}"/> â€¢ <Run Text="{Binding TimeDisplay, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                                    <Button Content="Open" Style="{StaticResource SecondaryButton}" 
                                                            Command="{Binding DataContext.OpenItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}" Padding="10,6" Margin="0,0,5,0"/>
                                                    <Button Content="Copy" Style="{StaticResource SecondaryButton}" 
                                                            Command="{Binding DataContext.CopyItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}" Padding="10,6" Margin="0,0,5,0"/>
                                                    <Button Content="Download" Style="{StaticResource SecondaryButton}" 
                                                            Command="{Binding DataContext.DownloadItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}" Padding="10,6"
                                                            Visibility="{Binding FileData, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                </StackPanel>

                                                <!-- Sender Info -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                    <TextBlock Text="From: " FontSize="11" 
                                                               Foreground="{StaticResource SecondaryTextBrush}"/>
                                                    <TextBlock Text="{Binding SenderWordCode}" FontSize="11" 
                                                               Foreground="{StaticResource AccentBrush}" Margin="0,0,15,0"/>
                                                    <TextBlock Text="{Binding DateDisplay}" FontSize="11" 
                                                               Foreground="{StaticResource SecondaryTextBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty State Message -->
                        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{Binding ReceivedItems.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                            <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                            <TextBlock Text="No items received yet" FontSize="14" 
                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
